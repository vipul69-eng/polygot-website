{
  "version": 2,
  "builds": [
    {
      "src": "**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/public/locales/(.*)",
      "dest": "/public/locales/$1",
      "headers": {
        "Content-Type": "application/json"
      }
    },
    {
      "src": "/locales/(.*)",
      "dest": "/public/locales/$1",
      "headers": {
        "Content-Type": "application/json"
      }
    },
    {
      "src": "/(.*)\\.css",
      "dest": "/$1.css",
      "headers": {
        "Content-Type": "text/css"
      }
    },
    {
      "src": "/(.*)\\.js",
      "dest": "/$1.js",
      "headers": {
        "Content-Type": "application/javascript"
      }
    },
    {
      "src": "/(.*)\\.(png|jpg|jpeg|gif|svg|ico|webp)",
      "dest": "/$1.$2"
    },
    {
      "src": "/(.*)\\.json",
      "dest": "/$1.json",
      "headers": {
        "Content-Type": "application/json"
      }
    },
    {
      "src": "/(en|es|fr|de)/?$",
      "dest": "/index.html"
    },
    {
      "src": "/(en|es|fr|de)/about/?$",
      "dest": "/about.html"
    },
    {
      "src": "/(en|es|fr|de)/contact/?$",
      "dest": "/contact.html"
    },
    {
      "src": "/(en|es|fr|de)/docs/?$",
      "dest": "/docs.html"
    },
    {
      "src": "/(en|es|fr|de)/(.*)",
      "dest": "/$2"
    },
    {
      "src": "/docs/?$",
      "dest": "/website/docs/index.html"
    },
    {
      "src": "/?$",
      "dest": "/website/home/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}
